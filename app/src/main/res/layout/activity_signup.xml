<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgregister"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFF8DC"
        android:drawablePadding="20dp"
        android:hint="E-mail"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:drawableStart="@drawable/baseline_email_24"

        />

    <EditText
        android:id="@+id/signup_password"
        app:passwordToggleEnabled="true"
        android:drawableStart="@drawable/baseline_lock_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFF8DC"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        />


    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_password"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFF8DC"
        android:drawableStart="@drawable/baseline_phone_24"
        android:drawablePadding="20dp"
        android:hint="Phone Number"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:passwordToggleEnabled="true" />


    <Button
        android:id="@+id/image_discount"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:drawableLeft="@drawable/baseline_add_photo_alternate_24"
        android:drawablePadding="20dp"
        android:hint="Attach Student ID/Senior Citizen ID, PWD ID for discount"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHighlight="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        android:textColorHint="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#aa883d"
        android:text="REGISTER" />

    <TextView
        android:id="@+id/loginRedirectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="01dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="01dp"
        android:layout_marginBottom="01dp"
        android:text="Already have an account? Sign in."
        android:textColor="@color/blue" />


</RelativeLayout>