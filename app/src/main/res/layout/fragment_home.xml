<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/mobileapp_bg">


    <ImageView
        android:id="@+id/home_container"
        android:layout_width="307dp"
        android:layout_height="272dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="447dp"
        android:src="@drawable/sfwalletcontainer"
        />

    <TextView
        android:id="@+id/remaining_balance"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/home_container"
        android:layout_alignTop="@+id/home_container"
        android:layout_alignEnd="@+id/home_container"
        android:layout_alignBottom="@+id/home_container"
        android:layout_marginStart="124dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="154dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="40dp" />


    <ImageView
        android:id="@+id/topup_btn"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/home_container"
        android:layout_alignTop="@+id/home_container"
        android:layout_alignEnd="@+id/home_container"
        android:layout_alignBottom="@+id/home_container"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:src="@drawable/topupicon"
        android:focusable="true"
        />




</RelativeLayout>