<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/loginemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFF8DC"
        android:drawablePadding="20dp"
        android:hint="E-mail"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:drawableStart="@drawable/baseline_email_24"


        />

    <EditText
        android:id="@+id/loginpassword"
        app:passwordToggleEnabled="true"
        android:drawableStart="@drawable/baseline_lock_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginemail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFF8DC"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:ems="15"
        />

    <ToggleButton
        android:id="@+id/showHideButton"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/loginpassword"
        android:layout_alignTop="@+id/loginpassword"
        android:layout_alignEnd="@+id/loginpassword"
        android:layout_alignBottom="@+id/loginpassword"
        android:layout_marginStart="331dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/baseline_visibility_24"
        android:button="@null"
        android:checked="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#aa883d"
        android:background="@drawable/custom_button"
        android:text="LOGIN"
        />

    <TextView
        android:id="@+id/signupRedirectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="01dp"
        android:layout_marginTop="01dp"
        android:layout_marginEnd="01dp"
        android:layout_marginBottom="01dp"
        android:text="Don't have an account? Sign-up"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupRedirectText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="01dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="01dp"
        android:layout_marginBottom="01dp"
        android:background="@drawable/custom_button"
        android:text="Forgot password?"
        android:textColor="@color/black"
        android:textSize="10dp" />


</RelativeLayout>